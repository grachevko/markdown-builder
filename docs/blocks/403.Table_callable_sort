$builder = Markdown::builder()
    ->table(
        ['First Header', 'Second Header'],
        static function (TableBuilder $builder): void {
            $builder->addRow(
                ['C', 'Content from cell C'],
                ['A', 'Content from cell A'],
                ['B', 'Content from cell B'],
            )->sort(fn (array $left, array $right) => $left[0] <=> $right[0]);
        },
    )
    ->getMarkdown();
